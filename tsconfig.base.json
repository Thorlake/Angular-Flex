{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@extensions/*": [
        "app/extensions/*.extensions.ts"
      ],
      "@api/*": [
        "app/services/api/*.service.ts",
        "app/services/api/*.ts", // for autoimport in IDE
      ],
      "@services/*": [
        "app/services/*.service.ts",
        "app/services/*.ts", // for autoimport in IDE
      ],
      "@models/*": [
        "app/models/*.ts",
        "app/models/entities/*.ts",
        "app/models/responses/*.ts",
      ],
      "@directives/*": [
        "app/directives/*.directive.ts",
        "app/directives/*.ts" // for autoimport in IDE
      ]
    }
  }
}